{
    "name": "algolia/search-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Bourdeau",
            "email": "julien@sigerr.org"
        },
        {
            "name": "Algolia Team",
            "email": "contact@algolia.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.6 || ^7.3",
        "algolia/algoliasearch-client-php": "^2.4",
        "doctrine/common": "^2.5",
        "symfony/filesystem": "4.4.0-BETA1",
        "symfony/property-access": "4.4.0-BETA1",
        "symfony/serializer": "4.4.0-BETA1"
    },
    "autoload": {
        "psr-4": {
            "Algolia\\SearchBundle\\": "src/"
        }
    },
    "conflict": {
        "doctrine/mongodb-odm": ">= 2.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Algolia\\SearchBundle\\": "tests/"
        }
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "2.0.0-beta1",
        "doctrine/orm": "^2.5",
        "jms/serializer-bundle": "^2.3",
        "ocramius/proxy-manager": "*",
        "phpunit/phpunit": "^5.7.21 || ^6.4 || ^7.0",
        "symfony/doctrine-bridge": "4.4.0-BETA1",
        "symfony/framework-bundle": "4.4.0-BETA1",
        "symfony/phpunit-bridge": "4.4.0-BETA1",
        "symfony/proxy-manager-bridge": "*",
        "symfony/yaml": "4.4.0-BETA1",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.4.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test:install": "composer install -d tests/QualityTools/",
        "test:update": "composer update -d tests/QualityTools/",
        "lint": "php-cs-fixer fix -v",
        "test:types": "tests/QualityTools/vendor/bin/phpstan analyse --ansi",
        "test:unit": "phpunit --colors=always --verbose",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test": [
            "@test:lint",
            "@test:unit"
        ]
    }
}
